<% include partials/header %>
<% include partials/loggedin %>
<div class="listing_scroll">
  <%
    function formattedDate(foundDate){
      foundDate = (foundDate.getMonth() + 1) + '/' + foundDate.getDate() + '/' +  foundDate.getFullYear();
      return foundDate;
    }
  %>


  <div class="">
    <table class="">
      <thead>
        <tr class="">
          <th>#</th>
          <th>LSC</th>
          <th>Property</th>
          <th>Street Name</th>
          <th>Apt/Unit</th>
          <th>Community</th>
          <th>Price</th>
          <th>Br + Wr</th>
          <th>Exposure</th>
          <th>Balcony</th>
          <th>Parking</th>
          <th>Maintainence</th>
          <th>Contract Date</th>
          <th>List Brokerage</th>
          <th>Brokerage Ph#</th>
          <th>CB comm</th>
          <th>MLS#</th>
          </tr>
      </thead>
      <tbody>
        <% listings.forEach(function(listing, index){ %>
              <tr class="">
                <td> <%= index + 1 %></td>
                <td> <%= listing.laststatus %> </td>
                <td> <%= listing.exteriortype %> </td>
                <td> <%= listing.stname %> </td>
                <td> <%= listing.unit %>  </td>
                <td> <%= listing.community %> </td>
                <td>Tk<%= listing.listprice %> </td>
                <td> <%= listing.bedroom %>+<%= listing.washroom %></td>
                <td> <%= listing.exposure %> </td>
                <td> <%= listing.balcony %> </td>
                <td> <%= listing.parking %> </td>
                <td> Tk <%= listing.maint %>.00</td>
                <td> <%= formattedDate(listing.contractdate) %> </td>
                <td> <%= currentUser.brokerage %>  </td>
                <td> <%= currentUser.phone %> </td>
                <td> <%= listing.cbcomm %> </td>
                <td> <%= ("BD").concat(listing.id.slice(4, 9)); %></td>
                <td><a href="/listing/<%= listing._id %>"><i class="fas fa-eye"></i></a></td>
                <td>
                  <% if(currentUser && listing.author.id.equals(currentUser._id)){ %>
                <a href="/listing/<%= listing._id %>/edit"><i class="fas fa-edit"></i></a>
                  <% } %>
                </td>
              </tr>
          <% }); %>
      </tbody>
  </table>
  </div>

    <% if(noMatch !== null) { %>
      <div class="" style="text-align: center; width:100%; height: 56vh; padding-top:1rem;">
      <h4><%= noMatch %> </h4>
      <!-- <img src="/images/search_again.jpg" alt="" style="display:block; margin-left:auto; margin-right:auto; max-width:100%;"> -->
      </div>
      <% } %>
</div>


<% include partials/footer %>
