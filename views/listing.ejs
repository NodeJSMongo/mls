<% include partials/header %>
<% include partials/loggedin %>
<div class="container">
  <div class="jumbotron">
    <h1 class="display-4 center">Your Search listing</h1>
  </div>

  <div class="">
    <% if(noMatch !== null) { %>
      <h4><%= noMatch %> </h4>
      <% } %>
  </div>

    <% listings.forEach(function(listing){ %>
      <ul class="list-group">
        <li class="list-group-item">
            <h5> <span><%= listing.name %> </span> | <span><%= listing.location %></span> </h5>
          <a href="/listing/<%= listing._id %>">Details</a>
          <% if(currentUser && listing.author.id.equals(currentUser._id)){ %>
          <a href="/listing/<%= listing._id %>/edit">Edit</a>
          <% } %>
        </li>
      </ul>
    <% }); %>
    <br>
    <a href="/search">back</a> |
    <a href="/listing/new">Create a new Listing</a>
</div>

<% include partials/footer %>
