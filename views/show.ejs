<% include partials/header %>
<% include partials/loggedin %>
<br>
<div class="wrapper show_border">
  <div class="show">

    <div class="show_image">
      <img src="/SEOCapture.PNG" class="figure-img img-fluid rounded" alt="...">
    </div>

    <div class="show_first">

      <div class="show_second">

        <div class="">
          <div class="card-body"> <span class="card-title">Division: </span> <span class="card-text"><%=listing.division %></span></div>
          <div class="card-body"> <span class="card-title">District: </span> <span class="card-text"><%=listing.district %></span></div>
          <div class="card-body"> <span class="card-title">City: </span> <span class="card-text"><%=listing.city %></span></div>
          <div class="card-body"> <span class="card-title">Area: </span> <span class="card-text"><%=listing.area %></span></div>
          <div class="card-body"> <span class="card-title">Community: </span> <span class="card-text"><%=listing.community %></span></div>
        </div>
        <div class="">
          <div class="card-body"> <span class="card-title">Property Status: </span> <span class="card-text"><%=listing.laststatus %></span></div>
          <div class="card-body"> <span class="card-title">List Price: </span> <span class="card-text"><%=listing.listprice %></span></div>
        </div>

      </div>
      <div class="show_second">

        <div class="">
          <div class="card-body"> <span class="card-title">Property Class: </span> <span class="card-text"><%=listing.propertyclass %></span></div>
          <div class="card-body"> <span class="card-title">Property Exterior: </span> <span class="card-text"><%=listing.exteriortype %></span></div>
        </div>
        <div class="">
          <div class="card-body"> <span class="card-title">Number of Rooms: </span> <span class="card-text"><%=listing.room %></span></div>
          <div class="card-body"> <span class="card-title">Number of Bedrooms: </span> <span class="card-text"><%=listing.bedroom %></span></div>
          <div class="card-body"> <span class="card-title">Number of Washrooms: </span> <span class="card-text"><%=listing.washroom %></span></div>
          <div class="card-body"> <span class="card-title">Number of kitchens: </span> <span class="card-text"><%=listing.kitchen %></span></div>
          <div class="card-body"> <span class="card-title">Property Volume: </span> <span class="card-text"><%=listing.level %></span></div>
        </div>

      </div>

    </div>

  </div>
  <div class="show_third">
    <div class="">
      <div class="card-body"> <span class="card-title">Contract Date: </span> <span class="card-text">MLS#</span></div>
      <div class="card-body"> <span class="card-title">Holdover Days: </span> <span class="card-text"><%=listing.holdoverdays %></span></div>
    </div>
    <div class="">
      <div class="card-body"> <span class="card-title">Seller Name: </span> <span class="card-text"><%=listing.sellername %></span></div>
      <div class="card-body"> <span class="card-title">Expiry Date: </span> <span class="card-text"><%=listing.contractdate %></span></div>
    </div>
    <div class="">
      <div class="card-body"> <span class="card-title">Possession Date: </span> <span class="card-text"><%=listing.possessiondate %></span></div>
    </div>
  </div>

  <div class="show_four">
    <div class="">
      <div class="card-body"> <span class="card-title">Property Exterior: </span> <span class="card-text"><%=listing.exteriortype %></span></div>
      <div class="card-body"> <span class="card-title">Property Exterior: </span> <span class="card-text"><%=listing.measurement %></span></div>
    </div>
    <div class="">
      <div class="card-body"> <span class="card-title">Air Cooler Facility: </span> <span class="card-text"><%=listing.ac %></span></div>
      <div class="card-body"> <span class="card-title">Elevator/Lift Service: </span> <span class="card-text"><%=listing.elevator %></span></div>
    </div>
    <div class="">
      <div class="card-body"> <span class="card-title">Water Supply Facility: </span> <span class="card-text"><%=listing.water %></span></div>
      <div class="card-body"> <span class="card-title">Power Supply Facility: </span> <span class="card-text"><%=listing.power %></span></div>
    </div>
  </div>

  <div class="show_five">
    <div class="">
      <div class="card-body"> <span class="card-title">Remarks For Clients: </span> <span class="card-text"><%=listing.remarkforclients %></span></div>
      <div class="card-body"> <span class="card-title">Extras: </span> <span class="card-text"><%=listing.extras %></span></div>
      <div class="card-body"> <span class="card-title">Remarks for Brokerages: </span> <span class="card-text"><%=listing.remarkforbrokers %></span></div>
    </div>
  </div>

  <div class="show_six">
    <div class="">
      <div class="">
        <h2>Brokerage's information</h2>
      </div>
      <br>
    </div>
    <div class="show_six-point">
      <div class="">
        <div class="card-body"> <span class="card-title">Contract Date: </span> <span class="card-text"><%=listing.contractdate %></span></div>
        <div class="card-body"> <span class="card-title">Expiry Date: </span> <span class="card-text"><%=listing.expirydate %></span></div>
        <div class="card-body"> <span class="card-title">Possession Date: </span> <span class="card-text"><%=listing.possessiondate %></span></div>
      </div>

      <div class="">
        <div class="card-body"> <span class="card-title">Condition: </span> <span class="card-text">Condition</span></div>
        <div class="card-body"> <span class="card-title">CB comm: </span> <span class="card-text"> CB comm</span></div>
      </div>

      <div class="">
        <div class="card-body"> <span class="card-title">Ad: </span> <span class="card-text">Ad: </span></div>
        <div class="card-body"> <span class="card-title">Escape</span> <span class="card-text">Escape</span></div>
        <div class="card-body"> <span class="card-title">Original </span> <span class="card-text"><%=listing.listprice %></span></div>
      </div>
    </div>
  </div>

  <div class="">
    <% if(currentUser && listing.author.id.equals(currentUser._id)){ %>
      <a href="/listing/<%= listing._id %>/edit">Edit</a>
      <form class="" action="/listing/<%=listing._id %>?_method=delete" method="post">
      <button type="submit" name="button">Remove</button>
      </form>
    <% }%>

    <a href="/listing">back</a>
  </div>
</div>

<% include partials/footer %>
